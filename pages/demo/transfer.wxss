@import '../../antui/widget/button.wxss';

page {
  background: #fff;
}

.am-edit-title {
  font-size: 15px
}

.am-edit-inpage {
    background: #fff;
    padding: 16px 16px 0;
    width: 100%;
    box-sizing: border-box;
    font-size: 17px;
    color: #333
}

.am-edit-inpage .am-edit-input {
    padding: 0;
    color: #333;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    align-items: center;
    background: linear-gradient(0,#ddd,#ddd 50%,transparent 50%) bottom right/100% 1px no-repeat
}

.am-edit-inpage .am-edit-input .am-icon-yuan {
    display: block;
    width: 18px;
    height: 80px;
    background: url("data:image/png;base64,") center center no-repeat;
    background-size: 100% auto
}

.am-edit-inpage .am-edit-input input {
    display: block;
    text-align: left;
    color: #333;
    padding: 0 0 0 10px;
    height: 58px;
    border: 0;
    font-size: 54px;
    flex: 1;
    box-sizing: border-box;
    line-height: 58px;
    font-weight: 400;
    width: 100%
}

.am-edit-inpage .am-edit-input .am-edit-clear,.am-edit-inpage .am-edit-tips .am-edit-clear {
    width: 18px
}

.am-edit-inpage .am-edit-tips {
    display: flex;
    color: #ddd;
    padding-top: 10px;
    line-height: 20px;
    border-top: 1rpx solid #eee;
}

.am-edit-inpage .am-edit-tips input {
    flex: 1;
    display: block;
    box-sizing: border-box;
    border: none;
    font-size: 15px;
}

.user-info {
  text-align: center;
  margin: 20px 0 40px;
}

.user-desc {
  font-size: 18px;
}

.am-button {
  height: 48px;
  border-radius: 3px;
}

.user-avatar image {
  width: 64px;
  height: 64px;
}